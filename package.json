{
  "name": "menutorus-api",
  "version": "1.0.0",
  "engines": {
    "node": ">=14"
  },
  "description": "API for Menutorus",
  "main": "dist/src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "npx tsc",
    "dev": "yarn dev:kill; npx prisma generate --watch & nodemon --config nodemon.json src/index.ts",
    "//dev": "yarn dev:kill; ts-node-dev -r dotenv/config -r tsconfig-paths/register --watch --exit-child src/index.ts",
    "dev:kill": "kill $(lsof -i:3000 | grep LISTEN | awk '{print $2}')",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "prisma:seed": "prisma db seed --preview-feature",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "//dev:debug2": "nodemon --exec 'node --inspect=0.0.0.0:9229 --require ts-node/register src/index.ts'",
    "jwt:generate": "node -e \"console.log(require('crypto').randomBytes(256).toString('base64'));\""
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/faker": "^5.1.7",
    "@types/hapi__hapi": "^20.0.5",
    "@types/hapi__jwt": "^2.0.0",
    "@types/node": "^14.14.35",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^29.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prisma": "^2.21.2",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3",
    "yargs": "^16.2.0"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.2",
    "@hapi/hapi": "^20.1.2",
    "@hapi/jwt": "^2.0.1",
    "@prisma/client": "^2.21.2",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "faker": "^5.4.0",
    "utility-types": "^3.10.0"
  }
}
